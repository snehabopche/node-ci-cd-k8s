apiVersion: apps/v1
kind: Deployment
metadata:
  name: node-ci-cd-k8s
spec:
  replicas: 2
  selector:
    matchLabels:
      app: node-ci-cd-k8s
  template:
    metadata:
      labels:
        app: node-ci-cd-k8s
    spec:
      containers:
      - name: node-ci-cd-k8s
        image: snehakurve7/node-ci-cd-k8s
        ports:
        - containerPort: 3000
---
apiVersion: v1
kind: Service
metadata:
  name: node-ci-cd-k8s-service
spec:
  selector:
    app: node-ci-cd-k8s
  ports:
    - protocol: TCP
      port: 3000
      targetPort: 3000
  type: NodePort

